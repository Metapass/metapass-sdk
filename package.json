{
	"name": "metapass-sdk",
	"version": "0.0.0",
	"description": "An sdk for the metapass protocol",
	"license": "MIT",
	"repository": "Metapass/metapass-sdk",
	"main": "lib/index.js",
	"author": {
		"name": "anoushk1234",
		"email": "kharangateanoushk04@gmail.com",
		"url": "https://metapasshq.xyz"
	},
	"type": "module",
	"exports": "./src/index.ts",
	"engines": {
		"node": ">=12"
	},
	"scripts": {
	"check:publish-ready": "yarn build && yarn test",
    "prepublishOnly": "yarn check:publish-ready",
    "preversion": "yarn check:publish-ready",
    "postversion": "git push --follow-tags",
    "clean": "rimraf dist",
	"build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "ttsc -p tsconfig.json",
    "build:cjs": "ttsc -p tsconfig.cjs.json",
    "build:test": "ttsc -p test/tsconfig.json",
    "amman:start": "DEBUG='amman*' amman validator",
    "amman:stop": "pkill solana-test-validator",
    "test": "yarn build:test && tape dist/test/**/*.test.js",
    "lint": "prettier -c ./src/",
    "lint:fix": "prettier --write ./src"

	},
	"files": [
		"./src/index.ts"
	],
	"keywords": [
		"metapass",
		"events",
		"NFTs"
	],
	"dependencies": {
		"@project-serum/anchor": "^0.23.0",
		"@solana/web3.js": "^1.37.0",
		"@types/axios": "^0.14.0",
		"@types/form-data": "^2.5.0"
	},
	"devDependencies": {
		"@metaplex-foundation/amman": "^0.1.0",
		"prettier": "^2.6.0",
		"ava": "^3.15.0",
		"codecov": "^3.7.2",
		"nyc": "^15.1.0",
		"typescript": "^4.6.3",
		"ttypescript": "^1.5.13",
		"xo": "^0.38.0"
	},
	"nyc": {
		"reporter": [
			"text",
			"lcov"
		]
	}
}
